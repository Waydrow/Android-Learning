<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.waydrow.starbucks.MainActivity">

    <ImageView
        android:id="@+id/picOfStarBucks"
        android:src="@drawable/starbucks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_below="@id/picOfStarBucks"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:padding="10dp"
        android:text="STARBUCKS"/>

    <TextView
        android:id="@+id/address"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="地址:"/>

    <TextView
        android:id="@+id/phone"
        android:layout_below="@id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="电话:"/>

    <TextView
        android:id="@+id/email"
        android:layout_below="@id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="邮箱:"/>

    <TextView
        android:id="@+id/intro"
        android:layout_below="@id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="简介:"/>


    <TextView
        android:id="@+id/addressContent"
        android:layout_toRightOf="@id/address"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="山东省青岛市乐客城1-2层"/>

    <TextView
        android:id="@+id/phoneContent"
        android:layout_toRightOf="@id/phone"
        android:layout_below="@id/addressContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="0532-58701325"/>

    <TextView
        android:id="@+id/emailContent"
        android:layout_toRightOf="@id/email"
        android:layout_below="@id/phoneContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="test@example.com"/>

    <TextView
        android:id="@+id/introContent"
        android:layout_toRightOf="@id/intro"
        android:layout_below="@id/emailContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="总部位于西雅图的连锁咖啡厅，以标志性的烘焙咖啡、点心和Wi-Fi而闻名。"/>

</RelativeLayout>
